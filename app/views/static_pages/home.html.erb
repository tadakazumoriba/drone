<h1>Drone Play in Thailand</h1>
<p>Get and share the Drone Playing Spot information in Thiland </p>

<% if logged_in? %>
 <div class="row">
   <aside class="col-md-4">
     <section class="user_info">
       <%= render 'shared/user_info'%>
      </section>
     <section class="place_form">
       <%= render 'shared/place_form' %>
      </section>
    </aside>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the drone place</h1>
    <%= link_to "Sign up now!" , signup_path , class: "btn btn-lg btn-primary" %>
  </div>


<script src="//maps.google.com/maps/api/js?v=3.23&key=[AIzaSyCkbdQGCjmx5kh5F1n9EJc5517OO8-LYKo]"></script>
<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<script type="text/javascript">
    handler = Gmaps.build('Google');
    handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
      markers = handler.addMarkers(<%=raw @hash.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
    });
</script>

<% end %>